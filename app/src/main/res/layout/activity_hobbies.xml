<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÍTULO -->
        <TextView
            android:text="Mis Hobbies"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:letterSpacing="0.02"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- CARD 1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:padding="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- IMAGEN SIN RECORTAR LA CARA -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/futbol_pequeno"
                    android:background="@drawable/rounded_image"
                    android:clipToOutline="true" />

                <TextView
                    android:layout_marginTop="14dp"
                    android:textSize="17sp"
                    android:textColor="#444444"
                    android:lineSpacingExtra="4dp"
                    android:text="Desde niño me apasiona el fútbol. Me adapto rápido, disfruto competir y cada partido me motiva a mejorar. Jugar con amigos siempre ha sido de mis actividades favoritas."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:padding="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- SEGUNDA IMAGEN TAMBIÉN SIN RECORTAR -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/futbol_actual"
                    android:background="@drawable/rounded_image"
                    android:clipToOutline="true" />

                <TextView
                    android:layout_marginTop="14dp"
                    android:textSize="17sp"
                    android:textColor="#444444"
                    android:lineSpacingExtra="4dp"
                    android:text="También disfruto los videojuegos, donde he logrado llegar a ser top global. Me gusta compartir tiempo con mi novia y mis amigos. Y aunque sea simple, para mí no hay nada como un pan con gaseosa. Además, soy técnico en contabilidad."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

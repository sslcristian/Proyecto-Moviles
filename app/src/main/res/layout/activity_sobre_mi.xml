<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÍTULO -->
        <TextView
            android:text="APRENDE SOBRE MI"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ===================== CARD FOTO PEQUEÑO ===================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_pequeno"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yo_pequeno"
                    android:contentDescription="Yo de pequeño" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Yo cuando era pequeño"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#444" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ==================== CARD FOTO ACTUAL ======================= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_actual"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yo_actual"
                    android:contentDescription="Yo actualmente" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Mi foto actual"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#444" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===================== CARD DESCRIPCIÓN ======================= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Mi Historia Personal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Mi nombre es Cristian Jesús Atencia Garavito, tengo 19 años y nací el 12 de junio de 2006 en Bucaramanga, en el Hospital del Norte.

Siempre me he considerado una persona noble y empática. Me gusta ayudar a los demás, soy sentimental, alegre y me caracterizo por ser un buen amigo.

Me adapto con facilidad y donde voy, siempre dejo una buena impresión. Soy alguien auténtico, transparente y con muchas ganas de crecer y cumplir mis metas."
                    android:textSize="15sp"
                    android:textColor="#555"
                    android:lineSpacingExtra="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

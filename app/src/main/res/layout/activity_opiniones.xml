<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etOpinion"
        android:hint="Escribe tu opinión sobre Cristian..."
        android:minLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnFecha"
            android:text="Elegir fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvFecha"
            android:layout_marginStart="12dp"
            android:text="Fecha no seleccionada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnImagen"
        android:layout_marginTop="8dp"
        android:text="Subir foto (obligatoria)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnGuardar"
        android:layout_marginTop="12dp"
        android:text="Guardar opinión"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- ESTE TENÍA EL ERROR: LE FALTABAN LAS MEDIDAS -->
    <TextView
        android:layout_marginTop="12dp"
        android:text="Opiniones guardadas:"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOpiniones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
